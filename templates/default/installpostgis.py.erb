#!/usr/bin/python
#
# Install Postgis extension for CKAN extensions
#

import sys
sys.path.append("/usr/lib/ckan/default/lib/python2.7/site-packages")
import psycopg2

try:
    conn = psycopg2.connect("dbname='<%= node['datashades']['ckan_web']['dbname'] %>' user='<%= node['datashades']['ckan_web']['dbuser'] %>' host='<%= node['datashades']['version'] %>pg.<%= node['datashades']['tld'] %>' password='<%= node['datashades']['postgres']['password'] %>'")
except:
    sys.exit(1)

cur = conn.cursor()
cur.execute("""CREATE EXTENSION postgis;""")
cur.execute("""CREATE EXTENSION postgis_topology;""")